<h3>Show Data</h3>



<table>
  <tr>
    <th>Serial No.</th>
    <th>Title</th>
    <th>Option</th>
  </tr>
  <% @articles.each do |f| %>
  <tr>
    <td>count</td>
    <td> <%= f.title %></td>
    <td><%= link_to 'Show', article_path(f) %> </td>
    <td><%= link_to 'Edit', edit_article_path(f) %> </td>
    <td><%#= link_to 'Delete', article_path(f) %> </td>
    <td><%= button_to "Delete", article_path(f), method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
  </tr>
  <% end %>
</table>
