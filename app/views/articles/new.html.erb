<h1 class="text-center mt-4">Create New Articles</h1>
 <%= link_to "Add New Article", articles_path,  class: "btn btn-success btn-lg" %>
 <%#= link_to "Add New Article", 'articles#show',  class: "btn btn-success btn-lg" %>



<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%#= render 'shared/errors', obj: @user %>
      
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :Title , class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Enter Title" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :description, class: "form-control", placeholder: "Enter Description" %>
          </div>
        </div>

        <!-- <div class="form-group row"> -->
          <%#= f.label :Image, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%#= f.file_field :image, class: "form-control", placeholder: "Select Image" %>
             <%= f.label :image %>
    		<%= f.file_field :image %>
          <!-- </div> -->
        </div>

        <div class="form-group row justify-content-center">
       <div class="form-group row">
          <%= f.submit :Submit, class: "col-2 col-form-label" %>

        </div>
      <% end %>

     
    </div>
  </div>
</div>