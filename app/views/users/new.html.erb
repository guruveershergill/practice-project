<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%#= render 'shared/errors', obj: @user %>
      
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control", placeholder: "Email address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control", placeholder: "Create a new password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %> 

        </div>
      <% end %>

      <%if logged_in? %>
        <div class="pb-5">
          <%= link_to '[ Return to User Listing ]', root_path, class: "text-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>